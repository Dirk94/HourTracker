extends account-base

block breadcrumbs
    script.
        
        $(document).ready(function() {
            $(".clockpicker").clockpicker({
                placement: "top",
                autoclose: true,
                "default": "now"
            });
            
            $(".datepicker").datepicker({
                format: "dd-mm-yyyy",
                todayBtn: "linked",
                autoclose: true,
                todayHighlight: true,
                defaultViewDate: new Date()
            });
            
            $(".selectpicker").select2();
        });
        
        app.controller("HourController", ["$scope", "$http",
            function($scope, $http) {
                $scope.waitingForResponse = false;
                $scope.showButton = true;
                $scope.showResponse = false;
                
                $scope.loghours = function(hours) {
                    $http({
                        method: "POST",
                        url: "/api/hours/log",
                        headers: {
                            "Content-Type": "application/json"
                        },
                        data: hours
                    }).then(function success(response) {
                        $scope.waitingForResponse = false;
                        $scope.showResponse = true;
                        
                        $scope.success = response.data.success;
                        $scope.message = response.data.message;
                        
                        if ($scope.success) {
                            $scope.showButton = false;
                            $scope.message = "Hours logged successfully.";
                            $scope.projectid = response.data.message;
                        } else {
                            $scope.showButton = true;
                        }
                    }, function error(response) {
                        $scope.waitingForResponse = false;
                        $scope.showResponse = true;
                        $scope.showButton = true;
                        
                        $scope.success = false;
                        $scope.message = "Unable to connect the backend server.";
                    });
                }
            }
        ]);
        
        app.controller("HourTableController", ["$scope", "$http", 
            function($scope, $http) {
                $scope.hours = !{JSON.stringify(hours)};
                for (var i=0; i<$scope.hours.length; i++) {
                    $scope.hours[i].showDelete = true;
                }
                
                $scope.delete = function(hour) {
                    hour.showDelete = false;
                    
                    $http({
                        method: "POST",
                        url: "/api/hours/delete",
                        headers: {
                            "Content-Type": "application/json"
                        },
                        data: {
                            hourid: hour._id
                        }
                    }).then(function success(response) {
                        if (response.data.success) {
                            var index = $scope.hours.indexOf(hour);
                            $scope.hours.splice(index, 1);
                        } else {
                            hour.showDelete = true;
                        }
                    }, function error(response) {
                        hour.showDelete = true;
                    })
                }
            }
        ]);
    
    li Account Home

block account-content
        h4 Quick Actions:

        p
            a(class="btn btn-md btn-primary btn-quick-action" href="/user/project/create" role="button")
                i(class="fa fa-plus-square fa-fw")
                | &nbsp;Create new project

            a(class="btn btn-md btn-default btn-quick-action-last" href="/user/stats" role="button")
                i(class="fa fa-line-chart fa-fw")
                | &nbsp;View logged hours

        hr

        h3 Log Hours
        form(ng-controller="HourController" name="hourform")
            div(class="form-group row")
                div(class="col-lg-6 col-sm-8")
                    label(for="project") Project
                    select(ng-model="hours.project" class="form-control selectpicker" data-live-search="true")
                        each val in projects
                            option(value=val._id selected)=val.name


            div(class="form-group")
                label(for="hours") Hours
                div(class="row")
                    div(class="col-lg-3 col-sm-4 col-xs-6")
                        div(class="input-group")
                            span(class="input-group-addon")
                                span(class="fa fa-clock-o")
                            input(ng-model="hours.from" required class="form-control clockpicker" name="from" type="text" placeholder="From")
                        p(ng-show="hourform.from.$touched && hourform.from.$error.required" class="form-warning")
                            | Please enter a valid time. format hh:mm

                    div(class="col-lg-3 col-sm-4 col-xs-6")
                        div(class="input-group")
                            span(class="input-group-addon")
                                span(class="fa fa-clock-o")
                            input(ng-model="hours.till" required class="form-control clockpicker" name="till" type="text" placeholder="Till")
                        p(ng-show="hourform.till.$touched && hourform.till.$error.required" class="form-warning")
                            | Please enter a valid time. format hh:mm
                                
            div(class="form-group row")
                div(class="col-lg-6 col-sm-8")
                    label(for="date") Date
                    input(ng-model="hours.date" required class="form-control datepicker" name="date" type="text" value="Today")
                    p(ng-show="hourform.date.$touched && hourform.date.$error.required" class="form-warning")
                        | Please enter a valid date. format dd-mm-yyyy

            div(class="form-group row")
                div(ng-if="showResponse == true")
                    div(ng-if="success == false")
                        p(class="bg-danger")
                            {{ message }}
                        
                    div(ng-if="success == true")
                        p(class="bg-success")
                            {{ message }} 
                            a(href="/user/home") Log more hours
            
                div(ng-if="showButton == true")
                    div(class="col-lg-6 col-sm-8")
                        button(ng-click="loghours(hours)" ng-disabled="!hourform.$valid" type="submit" class="btn btn-primary btn-block") Log Hours
                    
            div(ng-if="waitingForResponse == true")
                p
                    i(class="fa fa-spinner fa-spin")
                    | &nbsp;Registering   

        hr

        h3 Last logged hours
        p
            a(href="/user/stats") View detailed statistics
        table(ng-controller="HourTableController" class="table table-striped")
            thead
                tr
                    th Project
                    th Date
                    th Time
                    th Hours

            tbody
                tr(ng-repeat="hour in hours")
                    td
                        a(href="/project/{{hour.project}}") {{hour.projectName}}
                    td {{hour.date}}
                    td {{hour.from}}
                    td {{hour.hours}}
                    td 
                        a(ng-click="delete(hour)" ng-show="hour.showDelete" class="btn btn-xs btn-danger") Delete
                        div(ng-show="!hour.showDelete")
                            i(class="fa fa-spinner fa-spin")
                            | &nbsp;Deleting

            
                
